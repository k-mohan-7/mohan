#1
even=[]
odd=[]
ecount=0
ocount=0
lst=[1,2,3,4,5,6,7,8]
for i in lst:
    if i%2==0:
        ecount=ecount+1
        even.append(i)
    else:
        ocount=ocount+1
        odd.append(i)
print("Number of even numbers:",ecount)
print(even)
print("Number of odd numbers:",ocount)
print(odd)

#2
