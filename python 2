#5
    term=int(input("Enter the number of terms:"))
n1,n2=0,1
count=0
if term==1:
    print("Fibonacci series:",n1)
else:
    print("Fibonacci series:")
    while count<term:
        print(n1)
        n=n1+n2
        n1=n2
        n2=n
        count+=1
#6
n1=int(input("Enter the number:"))
fact=1
for i in range(1,n1+1):
    fact=fact*i
print("The factorial of the number is:",fact)        


